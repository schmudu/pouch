<%= form_tag('/send_contact_mail', :method => "get") do %>
  <%= label_tag(:name, "Name: (optional)") %>
  <%= text_field_tag(:name) %><br/>
  <%= label_tag(:email, "Email: (optional)") %>
  <%= text_field_tag(:email) %><br/>
  <%= label_tag(:subject, "Subject: ") %>
  <%= text_field_tag(:subject) %><br/>
  <%= label_tag(:message, "Content: ") %>
  <%= text_area_tag(:message) %><br/>
  <%= submit_tag("Contact Us") %><br/>
<% end %>