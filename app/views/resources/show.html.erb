<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @resource.title %>
</p>

<p>
  <b>Description:</b>
  <%= @resource.description %>
</p>

<ul>
  <% for attachment in @resource.attachments %>
    <li>
    <%= attachment.description %> - <%= link_to("Download", "/uploads/#{attachment.id}/#{File.basename(attachment.file.url)}") %>
    <% #link_to("Download", attachment.file_url) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_resource_path(@resource) %> |
<%= link_to 'Back', resources_path %>
