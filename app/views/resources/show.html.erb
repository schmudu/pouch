<%= javascript_include_tag "resources/show" %>

<div id="message"></div>

<% if user_signed_in? %>
  <%= link_to "Add To Favorites", {:controller => 'favorites', :action => 'create', :format => :js, :id => params[:id]}, :id => 'add_favorite', :remote => true %>
<% end %>
<p>
  <b>Title:</b>
  <%= @resource.title %>
</p>

<p>
  <b>Description:</b>
  <%= @resource.description %>
</p>

<ul>
  <% for attachment in @resource.attachments %>
    <li>
    <% if Rails.env.production? %>
      <%= link_to("Download", attachment.file_url) %>
    <% else %>
      <%= link_to("Download", "/uploads/#{attachment.id}/#{File.basename(attachment.file.url)}") %>
    <% end %>
    </li>
  <% end %>
</ul>

<h3>Topics</h3>
<ul>
  <% for topic in @resource.topics %>
    <li>
      <%= topic.name %>
    </li>
  <% end %>
</ul>

<% if current_user_owns_resource?(@resource) %>
  <%= link_to 'Edit', edit_resource_path(@resource) %> |
<% end %>
<%= link_to 'Back', resources_path %>
