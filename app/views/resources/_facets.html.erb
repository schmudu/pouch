<div id="facets">
  <h3>Authors</h3>
  <ul>
    <% @resources.facets['authors']['terms'].each do |facet| %>
      <li>
        <%= link_to_unless_current User.find(facet['term']).screen_name, params.merge(user_id: facet['term']) %>
        <% if params[:user_id] == facet['term'].to_s %>
          (<%= link_to "remove", user_id: nil %>)
        <% else %>
          (<%= facet['count'] %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
